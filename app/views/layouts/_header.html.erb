<header>
	<%= link_to "/" do %>
		<%= image_tag "logo.png", :class => 'logo'%>
	<% end %>	
	<% if signed_in? %>
		<%= link_to "Sign out", signout_path, :class => "signout_link" %>
	<% end %>	
	<div id="search-bar">
		<%= form_tag url_for(:controller => 'catalog', :action => 'search'), :method => "get" do %>
		  <p>
			<%= text_field_tag :search, params[:search], :placeholder => "SEARCH", :id => "search-input" %>
			<%= submit_tag "", :name => nil, :id => "search-button" %>
		  </p>	
		<% end -%>
	</div>	
</header>