<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/javascripts' %>
  <%= render 'layouts/stylesheets' %>
</head>
	<body>
		<section id="flash">
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
		</section>	
		<%= yield %>
		<!-- debug information not shown for production -->
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
