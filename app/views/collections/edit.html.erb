<h1>Editing collection</h1>

<%= form_for :collection, :url => collection_path(@collection),
            :html => {:method => :put} do |f| %>

    <fieldset>
      <legend>Edit Collection</legend>

      <%=  render :partial => 'form', :locals => {:f => f} %>

      <%=  submit_tag "Update" %>
    </fieldset>
<% end %>

<%= link_to 'Show', collection_path(@collection) %> |
<%= link_to 'Back',  collection_path %>