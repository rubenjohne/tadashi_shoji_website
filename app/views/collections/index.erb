<h1>Collections</h1>

<table>
  <tr>
    <th>Collection</th>
  </tr>

<% @collections.each do |collection| %>
    <tr>
        <td><%=  collection.collection %></td>
        <td><%=  link_to 'Show', collection_path(collection) %></td>
        <td><%=  link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%=  button_to 'Destroy', collection_path(collection), :data => { :confirm => 'Are you sure?' }, :method => :delete %></td>
    </tr>
<% end  %>


</table>


<%=  link_to 'New Collection', new_collection_path %>